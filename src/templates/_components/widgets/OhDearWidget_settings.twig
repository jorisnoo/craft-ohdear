{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("webhubworks\\ohdear\\assetbundles\\ohdear\\OhDearWidgetAsset") %}

{{ forms.selectField({
    label: 'Period'|t('ohdear'),
    instructions: 'Specify the timespan for the up- and downtime stats.'|t('ohdear'),
    id: 'period',
    name: 'period',
    value: widget['period'],
    options: [
        {
            value: 'hour',
            label: 'Last 24 hours'|t('ohdear')
        },
        {
            value: 'day',
            label: 'Last month'|t('ohdear')
        },
        {
            value: 'month',
            label: 'Last year'|t('ohdear')
        }
    ]
}) }}

{{ forms.checkboxGroupField({
    label: 'Checks'|t('ohdear'),
    instructions: 'Enable or disable checks in the widget.'|t('ohdear'),
    name: 'checks',
    id: 'checks',
    values: widget['checks'],
    options: [
        {
            label: 'Uptime'|t('ohdear'),
            value: 'uptime'
        },
        {
            label: 'Broken Links'|t('ohdear'),
            value: 'broken_links'
        },
        {
            label: 'Mixed Content'|t('ohdear'),
            value: 'mixed_content'
        },
        {
            label: 'Certificate Health'|t('ohdear'),
            value: 'certificate_health'
        }
    ],
}) }}
